<Window x:Class="AnimalZooApp.Views.GeneralWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimalZooApp.Views"
        mc:Ignorable="d"
        Title="Окно просмотра животных" Height="450" Width="800" Icon="/Assets/Images/Icon.png" Background="{StaticResource WindowSecondaryColor}">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="{StaticResource WindowTertiaryColor}">
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">

                <TextBox x:Name="SearchTextBox" Height="20" Width="200" Margin="5" TextChanged="SearchTextBox_TextChanged" Style="{StaticResource TextBoxStyle1}" Tag="Введите текст для поиска"/>

                <ComboBox x:Name="SortComboBox" Height="20" Width="150" Margin="5" SelectionChanged="SortComboBox_SelectionChanged"/>

                <ComboBox x:Name="FilthComboBox" Height="20" Width="150" Margin="5" SelectionChanged="FilthComboBox_SelectionChanged"/>

            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10">

                <Button Content="Добавить животное" x:Name="AddAnimalButton" Click="AddAnimalButton_Click" Margin="5,2" Style="{StaticResource ButtonStyle1}" Padding="5,0"/>
                
                <Button Content="Выход" x:Name="LogOutButton" Click="LogOutButton_Click" Margin="5,2" Style="{StaticResource ButtonStyle1}" Padding="5,0"/>

            </StackPanel>
            
        </Grid>

        

        <ListView x:Name="ValiersListView" Grid.Row="1" Background="Transparent" BorderThickness="0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick"/>
                    <EventSetter Event="KeyDown" Handler="ListViewItem_KeyDown"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                
                                <Border Background="{StaticResource ButtonPrimaryColor}" BorderBrush="{StaticResource BorderPrimaryColor}" BorderThickness="3" CornerRadius="10" Margin="10">

                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10">

                                        <TextBlock Text="{Binding Name}"/>
                                        <TextBlock Text="{Binding DescriptionText}"/>
                                        <TextBlock Text="{Binding DateOfBirth}"/>
                                        <TextBlock Text="{Binding Gender}"/>
                                        <TextBlock Text="{Binding DietText}"/>
                                        <TextBlock Text="{Binding Weight}"/>
                                        <TextBlock Text="{Binding Valier.Title}"/>
                                        <TextBlock Text="{Binding Age}"/>

                                    </StackPanel>
                                    
                                </Border>
                                
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

    </Grid>
    
</Window>
