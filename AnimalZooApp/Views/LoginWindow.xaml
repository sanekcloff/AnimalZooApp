<Window x:Class="AnimalZooApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimalZooApp.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="200" Width="250" WindowStartupLocation="CenterScreen">
    
    <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">

        <TextBlock x:Name="TestTextBlock" Margin="10" Text="2 + 2 = ?" HorizontalAlignment="Center"/>
        <TextBox x:Name="TestTextBox" Margin="10"/>
        <Button x:Name="TestButton" Margin="10" Content="Вход" Click="TestButton_Click"/>

    </StackPanel>
    
</Window>
